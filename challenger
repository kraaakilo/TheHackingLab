import platform

# Initialize colorama for cross-platform color support
init(autoreset=True)

class TripleACTFManager:
    DEFAULT_CATEGORIES = [
        "web_exploitation",
        "reverse_engineering",
        "general_skills",
        "forensics",
        "binary_exploitation",
        "osint",
        "misc"
    ]

    COOL_MESSAGES = {
        'platform': [
            "ðŸš€ Ready to conquer another CTF platform?",
            "ðŸŽ¯ Target acquired! Let's choose your battleground.",
            "ðŸ”¥ Time to unleash your hacking prowess!",
            "ðŸŒŸ Another day, another CTF challenge to crush!"
        ],
        'category': [
            "ðŸŽ­ What's your hacking style today?",
            "ðŸ§© Pick your puzzle, digital warrior!",
            "ðŸ”“ Choose your lock to pick!",
            "ðŸŽª Step right up! Choose your cyber arena!"
        ],
        'challenge': [
            "âš”ï¸ Prepare for cyber battle!",
            "ðŸ† Your next victory awaits...",
            "ðŸŽ® Game on, hacker! Choose your challenge.",
            "ðŸ” Time to find that flag!"
        ],
        'success': [
            "ðŸš© Challenge accepted! Let the hack begin!",
            "ðŸ’» Your digital playground is ready!",
            "â³ The clock is ticking... Hack away!",
            "ðŸŽ‰ Lock picked! Time to solve the puzzle!"
        ]
    }

    def __init__(self, base_directory: str = os.getcwd()):
        # Use an absolute path for the base directory
        self.base_directory = os.path.abspath(os.path.expanduser(base_directory))
        print(self.base_directory)
        try:
            # Attempt to create the base directory
            os.makedirs(self.base_directory, exist_ok=True)
            print(f"Base directory set to: {self.base_directory}")
        except Exception as e:
            print(f"Error creating base directory: {e}")

    @staticmethod
    def print_banner():
        os.system("clear")
        print(f"""
{Fore.YELLOW}ðŸ† Welcome to the CTF Challenge Manager ðŸ†{Fore.CYAN}
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•|
{Fore.GREEN}[ Hack Smarter, Not Harder ]{Fore.CYAN}

  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ
